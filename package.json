{
  "name": "acme-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "build": "next build",
    "clean": "git clean -xdf node_modules .next",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/server/db/seed.ts",
    "db:seedd": "tsx src/server/db/index.ts",
    "ui-add": "pnpm dlx shadcn add && prettier src --write --list-different",
    "dev": "next dev --turbopack",
    "format": "prettier --check . !pnpm-lock.yaml !package.json",
    "format:fix": "prettier --write .",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "start": "node .next/standalone/server.js"
  },
  "dependencies": {
    "@clerk/elements": "0.23.8",
    "@clerk/nextjs": "6.12.12",
    "@hookform/resolvers": "4.1.3",
    "@neondatabase/serverless": "0.10.4",
    "@paralleldrive/cuid2": "2.2.2",
    "@radix-ui/react-dropdown-menu": "2.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-slot": "1.1.2",
    "@t3-oss/env-nextjs": "0.12.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.41.0",
    "drizzle-seed": "0.3.1",
    "drizzle-zod": "0.7.0",
    "lucide-react": "0.484.0",
    "next": "15.2.4",
    "next-international": "1.3.1",
    "next-safe-action": "7.10.4",
    "next-themes": "0.4.6",
    "pg": "8.14.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.54.2",
    "sonner": "2.0.2",
    "tailwind-merge": "3.0.2",
    "tailwindcss": "4.0.17",
    "tw-animate-css": "1.2.4",
    "ws": "8.18.1",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/postcss": "^4.0.17",
    "@types/node": "^22.13.14",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.0",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-drizzle": "^0.2.3",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
