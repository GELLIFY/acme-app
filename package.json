{
  "name": "acme-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.22.0"
  },
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "build": "next build --webpack",
    "clean": "git clean -xdf node_modules .next",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config=src/shared/infrastructure/better-auth/auth.ts --output=src/server/db/schema/auth-schema-new.ts --yes",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/server/db/seed.ts",
    "dev": "next dev",
    "email:dev": "email dev --dir=src/emails --port=3001",
    "ui:add": "pnpm dlx shadcn@latest add",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "SKIP_ENV_VALIDATION=1 next typegen && tsc --noEmit",
    "test": "bun test",
    "start": "node .next/standalone/server.js"
  },
